{
  // general
  "material-icon-theme.folders.theme": "specific",
  "workbench.iconTheme": "material-icon-theme",

  "window.zoomLevel": 0,
  "workbench.startupEditor": "newUntitledFile",
  "extensions.ignoreRecommendations": true,
  "typescript.check.npmIsInstalled": false,
  "explorer.confirmDragAndDrop": false,

  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  // for editor
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.tabSize": 4,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.formatOnType": false,
  "editor.suggestSelection": "first",
  "editor.renderWhitespace": "all",

  // files setting
  "files.associations": {
    "*.vue": "vue"
  },

  // live share
  "liveshare.guestApprovalRequired": true,
  "liveshare.anonymousGuestApproval": "reject",

  // for git
  "git.path": "/usr/bin/git",
  "git.confirmSync": false,
  "git.autofetch": true,

  // for javascript
  "javascript.referencesCodeLens.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  // for javascript linting
  "prettier.eslintIntegration": true,
  "vetur.format.options.useTabs": true,
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    {
      "language": "vue",
      "autoFix": true
    },
    "html"
  ],
  "eslint.options": {
    "configFile": ".eslintrc.js"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // for java
  "maven.terminal.useJavaHome": true,
  "java.configuration.maven.userSettings": "/usr/local/sb/mvn/conf/settings.xml",
  "java.test.config": [
    {
      "name": "Junit5Conf",
      "workingDirectory": "${workspaceFolder}",
      "args": ["-c", "com.test"],
      "vmargs": ["-Xmx4G"],
      "env": { "key": "dev" }
    }
  ],

  // for spring-boot
  "boot-java.change-detection.on": true,
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "java.format.settings.profile": "GoogleStyle",
  "java.checkstyle.configuration": "${workspaceFolder}/checkstyle.xml",
  "java.format.settings.url": "formatter.xml",
  "java.jdt.ls.vmargs": "-noverify -Xmx1G -XX:+UseG1GC -XX:+UseStringDeduplication -javaagent:\"/Users/{{ ansible_env.USER }}/.vscode/extensions/gabrielbb.vscode-lombok-0.9.8/server/lombok.jar\"",
  "git.enableSmartCommit": true,

  // for plantuml
  "plantuml.commandArgs": [
    "-Xmx2g",
    "-DPLANTUML_LIMIT_SIZE=16384"
  ]
}
